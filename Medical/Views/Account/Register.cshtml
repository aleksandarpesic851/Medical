@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register - Medical</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/login/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/login/css/style.css">
</head>
<body>
    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>

                        <div class="text-center text-error">
                            @ViewData["ErrorMessage"]
                        </div>

                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="user_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="user_name" id="user_name" placeholder="Your Name" required />
                            </div>
                            <div class="form-group">
                                <label for="user_email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="user_email" id="user_email" placeholder="Your Email" required />
                            </div>
                            <div class="form-group">
                                <label for="user_password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="user_password" id="user_password" placeholder="Password" required />
                            </div>
                            <div class="form-group">
                                <label for="user_password_confirm"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" id="user_password_confirm" placeholder="Repeat your password" required />
                            </div>
                            <div class="form-group">
                                <label for="user_phone"><i class="zmdi zmdi-phone"></i></label>
                                <input type="password" name="user_phone" id="user_phone" placeholder="Your Phone" required />
                            </div>
                            <div class="form-group">
                                <label for="user_dob"><i class="zmdi zmdi-assignment"></i></label>
                                <input type="password" name="user_dob" id="user_dob" placeholder="DOB" required />
                            </div>
                            <div class="form-group">
                                <label for="user_address"><i class="zmdi zmdi-city"></i></label>
                                <input type="password" name="user_address" id="user_address" placeholder="Your Address" required />
                            </div>
                            <div class="form-group form-button">
                                <button type="button" onclick="submitForm()" class="form-submit">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/login/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Account/Login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>

    <script>
        function submitForm() {
            const pwd = $("#user_password").val();
            const pwd_confirm = $("#user_password_confirm").val();
            if (pwd !== pwd_confirm) {
                alert("Your password confirmation is invalid. Please type your password correctly.");
                return;
            }
            $("#register-form").submit();
        }

    </script>
</body>
</html>